        const paths = "{{paths}}".split(',');
        //document.write(paths[0]);///
        var a = paths;

        if (a.length%2==0){
          for (var i = paths.length-1; i > 0; i -= 2){
              document.write('<div class="video"> \
                  <video class="video" width="46%"loop controls> \
                  <source src="'+paths[i]+'" \
                  type="video/mp4"></video>\
                  <video class="video" width="46%" loop controls> \
                  <source src="'+paths[i-1]+'" \
                  type="video/mp4"></video></div>')
            }
        }
        else{
            for (var i = paths.length-1; i > 1; i -= 2){
                document.write('<div class="video"> \
                    <video class="video" width="46%"loop controls> \
                    <source src="'+paths[i]+'" \
                    type="video/mp4"></video>\
                    <video class="video" width="46%" loop controls> \
                    <source src="'+paths[i-1]+'" \
                    type="video/mp4"></video></div>')
            }
            document.write('<div class="video"> \
                    <video class="video" width="46%"loop controls> \
                    <source src="'+paths[0]+'" \
                    type="video/mp4"></video>')
        }
       
        
         
    </script>
