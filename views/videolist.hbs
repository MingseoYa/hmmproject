<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        .naming{
            font-size: 3vh;
            margin: 0;
            color: rgb(135, 177, 235);
        }
        header {  
            height: 10%;
            position : fixed;
            width: 100%;
            background-color: white;
            top : 0;
            left: 0;

            border-bottom: solid 1.5px rgb(218, 218, 218);
            color: rgb(135, 177, 235);
            display: flex;
            align-items: center;
            
        }
        #bbaek {
            width: 52px;
            font-weight: bold;
            border: none;
            background: rgb(255, 255, 255);
            color: gray;
            cursor: pointer;
            display: inline-block;
            text-align: center;
            font-size: 20px;
            top:1%;
        }
        body{
            padding-top: 75px;
            height: 90%;
            margin: 0;
        }

        .grayish{
            color: rgb(75, 75, 75); 
        }
        @media screen and (max-width:767px){
            fieldset{
        border: none;
        }
        }
        @media screen and (min-width:768px){
            fieldset{
        width: 50%;
        border: none;
        margin: 0 auto;
        }
        }
        #novideo{
            color : rgb(143, 143, 143);
        }
        .imgSize{
                width: 30px;
                height: 30px;
                border-radius: 50%;
                vertical-align:middle;
        }
        
        .profile{
            width: 100%;
            height: 70px;
            line-height: 70px;
            display: inline-block;
            padding: 5px;
        }
        #nickname{
            display: inline-block;
            margin: 0;
            height: 30px;
            line-height: 30px;
            margin-left: 5px;
        }
        .video{
            border-radius: 10px;
            
        }
    </style>
</head>
<body>
    <header>
        <form action="/auth/map" method = "POST">
        <button id="bbaek" >&lt;</button>
        </form>
        <h2 class="naming">{{location}}</h4>

    </header>
    
<fieldset>
    <script language = "javascript">
        var pnu = "{{pnu}}";

        if (pnu.length !== 0){
            pnu = pnu.split(',');
            str = "";
            
            for (let i = pnu.length - 1 ; i > 0; i -= 4){
                console.log(pnu[i+2]);
                str += '<div id = "videos"><div class="profile"><img class="imgSize" src="' + pnu[i-3] + '\
                        "><h4 class = "grayish" id = "nickname">' + pnu[i-2] + '\
                        </h4></div><video class="video" width="100%" loop controls><source src ="' + pnu[i-1] + '\
                        " type = "video/mp4"><br></video><br><h5 class="grayish">' + pnu[i] + '</h5></div><hr>'
            }     
            document.write(str);

        }else{
            document.write("<h5 id = 'novideo'>등록된 영상이 없습니다.</h5>");
        }
    
    </script>
</fieldset>
        
</body>
</html>
